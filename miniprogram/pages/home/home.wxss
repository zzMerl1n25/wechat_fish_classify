/* 页面基础 */
.page{
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #F4FBFF 0%, #EEF7FF 45%, #FFFFFF 100%);
}

/* 适配刘海：顶部安全区（iOS/全面屏） */
.safe-top{
  padding-top: calc(env(safe-area-inset-top) + 18rpx);
}

/* 顶部标题整体居中 + 显眼 */
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 24rpx 14rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 18rpx;
}

/* 标题卡片容器 */
.title-wrap{
  width: 92%;
  max-width: 680rpx;
  text-align: center;

  padding: 18rpx 18rpx;
  border-radius: 22rpx;

  background: rgba(255,255,255,0.72);
  border: 1rpx solid rgba(11,43,74,0.08);
  box-shadow: 0 12rpx 30rpx rgba(11,43,74,0.08);
  backdrop-filter: blur(8px);
}

/* 大标题 */
.title{
  font-size: 76rpx;
  font-weight: 800;
  color: #0B2B4A;
  letter-spacing: 4rpx;
}

/* 副标题 */
.subtitle{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(11,43,74,0.55);
}

/* 主体撑满剩余空间并居中 */
.main{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 18rpx 24rpx 26rpx;
}

/* 大圆按钮区域 */
.shot-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 6rpx;
}

/* 大圆按钮本体 */
.shot-btn{
  width: 360rpx;
  height: 360rpx;
  border-radius: 9999rpx;
  padding: 0;
  border: none;

  background: radial-gradient(circle at 35% 30%, #88C9FF 0%, #3A7BFF 55%, #2B60E6 100%);
  box-shadow: 0 22rpx 44rpx rgba(45, 120, 255, 0.25);

  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按压态 */
.shot-btn-hover{
  transform: scale(0.98);
  opacity: 0.95;
}

/* 内圈 */
.shot-inner{
  width: 300rpx;
  height: 300rpx;
  border-radius: 9999rpx;
  background: rgba(255,255,255,0.14);
  border: 2rpx solid rgba(255,255,255,0.25);

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 图标与文字 */
.shot-icon{
  font-size: 54rpx;
  margin-bottom: 10rpx;
}
.shot-text{
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

/* 上传按钮（小一些，放下面） */
.upload-btn{
  margin-top: 24rpx;
  height: 86rpx;
  width: 320rpx;
  border-radius: 9999rpx;

  background: rgba(255,255,255,0.85);
  border: 1rpx solid rgba(11,43,74,0.10);
  box-shadow: 0 10rpx 22rpx rgba(11,43,74,0.08);

  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14rpx;
}

.upload-btn-hover{
  transform: scale(0.99);
  opacity: 0.96;
}

.upload-icon{
  font-size: 30rpx;
}
.upload-text{
  font-size: 30rpx;
  font-weight: 650;
  color: #0B2B4A;
}

/* 提示卡片 */
.tips-card{
  margin-top: 22rpx;
  width: 92%;
  max-width: 680rpx;

  background: rgba(255,255,255,0.75);
  border: 1rpx solid rgba(11,43,74,0.08);
  border-radius: 18rpx;
  padding: 18rpx 18rpx;

  box-shadow: 0 10rpx 24rpx rgba(11,43,74,0.06);
}

.tip-item{
  font-size: 26rpx;
  color: rgba(11,43,74,0.55);
  line-height: 44rpx;
}

/* 底部 */
.footer{
  text-align: center;
  font-size: 22rpx;
  color: rgba(11,43,74,0.35);
  padding: 10rpx 0 16rpx;
}
